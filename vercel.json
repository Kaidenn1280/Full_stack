{
    "version": 2,
    "buildCommand": "cd frontend/skill-sync/vue && npm install && npm run build",
    "outputDirectory": "frontend/skill-sync/vue/dist",
    "installCommand": "npm install --prefix frontend/skill-sync/vue && npm install --prefix backend/mine_app",
    "functions": {
        "backend/mine_app/api/index.ts": {
            "runtime": "@vercel/node@3.0.0",
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/backend/mine_app/api"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET,POST,PUT,DELETE,OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization"
                }
            ]
        }
    ]
}